<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hello,userðŸ‘‹"
        android:textColor="#00C97F"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Waktu Nya Menjadi Lebih Baik Untuk Hari Ini!"
        android:textSize="14sp"
        android:textColor="#00C97F"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tvPilihWaktuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Pilih Waktu"
        android:textColor="#00C97F"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#00C97F"
        app:layout_constraintStart_toEndOf="@id/tvPilihWaktuLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPilihWaktuLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvPilihWaktuLabel"
        android:layout_marginStart="8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnPagi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#00C97F"
        app:layout_constraintTop_toBottomOf="@id/tvPilihWaktuLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPagiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagi"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/ketupat" />

                <TextView
                    android:id="@+id/tvPagiTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:00"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/ketupat" />

                <TextView
                    android:id="@+id/tvPagiLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta, Jawa Barat"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewSun"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Mode Pagi"
                android:src="@drawable/suntwo" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnMalam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#8E24AA"
        app:layout_constraintTop_toBottomOf="@id/btnPagi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMalamLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malam"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/ketupat" />

                <TextView
                    android:id="@+id/tvMalamTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/ketupat" />

                <TextView
                    android:id="@+id/tvMalamLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta, Jawa Barat"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewMoon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Mode Malam"
                android:src="@drawable/moonn" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPilihModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Mode"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00C97F"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/btnMalam"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/dividerPilihMode"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#00C97F"
        app:layout_constraintStart_toEndOf="@id/tvPilihModeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPilihModeLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvPilihModeLabel"
        android:layout_marginStart="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modeSelectionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPilihModeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAtasiBurnout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnAtasiCemas"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginEnd="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atasi\nBurn Out"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00C97F"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAtasiCemas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAtasiBurnout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atasi\nKecemasan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00C97F"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSelectedMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu dan Mode Terpilih: -"
        android:textSize="13sp"
        android:textColor="#00C97F"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/modeSelectionLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00DF81"
        android:drawableEnd="@drawable/rightarrow"
        android:fontFamily="@font/poppins_bold"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Mulai Sekarang"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedMode"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggleAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status Alarm"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStartNow" />

</androidx.constraintlayout.widget.ConstraintLayout>
